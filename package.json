{
  "name": "webserver-with-websockets",
  "version": "1.0.0",
  "description": "A webserver with websockets for stopwatch synchronization and split times",
  "main": "server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "tsc",
    "test": "jest",
    "dev": "ts-node server/server.ts",
